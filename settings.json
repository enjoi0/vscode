{
  // Window
  "window.title": "${dirty}${rootName} - ${activeEditorMedium}",
  "window.zoomLevel": -1,
  "window.menuBarVisibility": "toggle",

  // Workbench
  "workbench.statusBar.visible": true,
  "workbench.statusBar.feedback.visible": false,
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Absent Light (rainglow)",
  "workbench.iconTheme": "vs-minimal",
  "explorer.openEditors.visible": 0,
  "workbench.editor.showIcons": true,
  "workbench.tree.indent": 20,

  // Editor
  "editor.fontFamily": "'Source Code Variable', Consolas, 'Courier New', monospace",
  "editor.fontWeight": "500",
  "editor.fontSize": 17,
  "editor.tabSize": 2,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.renderLineHighlight": "none",
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,

  // Misc
  "search.smartCase": true,
  "git.enabled": false,

  // Vim
  "vim.hlsearch": false,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.leader": ",",
  "vim.insertModeKeyBindings": [
    {
      "before": ["k", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "v"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "x"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<leader>", "z"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<leader>", "c"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "v"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "v"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "v"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "v"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.terminal.toggleTerminal"]
    },
    {
      "before": ["<C-w>", "c"],
      "commands": ["workbench.action.closeEditorsInGroup"]
    },
    { "before": ["<C-h>"], "commands": ["workbench.action.navigateLeft"] },
    { "before": ["<C-l>"], "commands": ["workbench.action.navigateRight"] },
    { "before": ["<C-j>"], "commands": ["workbench.action.navigateDown"] },
    { "before": ["<C-k>"], "commands": ["workbench.action.navigateUp"] }
  ],
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "editor.formatOnSave": true,
  "eslint.run": "onSave"
}
