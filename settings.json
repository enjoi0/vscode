{
    "editor.cursorBlinking": "smooth",
    "window.menuBarVisibility": "toggle",
    "window.title": "${dirty}${rootName} - ${activeEditorMedium}",
    "editor.renderLineHighlight": "gutter",
    "editor.minimap.enabled": false,
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "explorer.openEditors.visible": 0,
    "vim.useCtrlKeys": true,
    "editor.smoothScrolling": true,
    "workbench.statusBar.feedback.visible": false,
    "workbench.editor.showIcons": true,
    "workbench.iconTheme": "vs-minimal",
    "vim.hlsearch": false,
    "git.enabled": false,
    "vim.insertModeKeyBindings": [
        {
            "before": ["k", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["<leader>", "v"], "commands": ["workbench.action.splitEditor"], },
        { "before": ["<C-h>"], "commands": ["workbench.action.navigateLeft"], },
        { "before": ["<C-l>"], "commands": ["workbench.action.navigateRight"], },
        { "before": ["<C-j>"], "commands": ["workbench.action.navigateDown"], },
        { "before": ["<C-k>"], "commands": ["workbench.action.navigateUp"], },
        { "before": ["<C-x>"], "commands": ["workbench.action.showCommands"], },
        { "before": ["<C-q>"], "commands": ["workbench.action.nextEditor"], },
        { "before": ["<C-z>"], "commands": ["workbench.action.previousEditor"], },
        { "before": ["<C-c>"], "commands": ["workbench.action.closeActiveEditor"], },
        { "before": ["<C-w>", "c"], "commands": ["workbench.action.closeEditorsInGroup"], },
        { "before": ["<leader>", "t"], "commands": ["workbench.action.terminal.toggleTerminal"], },
        {
            "before": ["<C-n>"],
            "commands": [":nohl"]
        }
    ],
    "vim.leader": ",",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    "window.zoomLevel": -1,
    "workbench.colorTheme": "Soup Contrast (rainglow)",
    "editor.fontFamily": "'Source Code Variable', Consolas, 'Courier New', monospace",
    "search.smartCase": true,
    "workbench.tree.indent": 19,
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "editor.fontWeight": "500",
    "editor.fontSize": 17,
    "editor.cursorSmoothCaretAnimation": true,
}